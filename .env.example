# Prediction Market MCP Server Configuration
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit .env to git - it contains secrets!

# ============================================================================
# PLATFORM ENABLEMENT
# ============================================================================

KALSHI_ENABLED=true
POLYMARKET_ENABLED=false

# ============================================================================
# KALSHI CONFIGURATION
# ============================================================================

# Demo mode - uses Kalshi's demo API (no real money)
# Set to true for testing, false for production trading
KALSHI_DEMO_MODE=true

# Kalshi account email
KALSHI_EMAIL=your_email@example.com

# Kalshi API key ID (from https://kalshi.com/settings/api)
KALSHI_API_KEY_ID=your_api_key_id

# RSA Private Key - Choose ONE of these options:

# Option 1 (RECOMMENDED): Path to your RSA private key file
# Keep the key file outside the repo or in a gitignored directory
KALSHI_PRIVATE_KEY_PATH=/path/to/your/kalshi_private_key.pem

# Option 2: Raw private key content (less secure, use for containerized deployments)
# KALSHI_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----"

# ============================================================================
# POLYMARKET CONFIGURATION (when POLYMARKET_ENABLED=true)
# ============================================================================

# Your Polygon wallet private key (without 0x prefix)
# IMPORTANT: Keep this secret! Never commit to git
POLYGON_PRIVATE_KEY=your_private_key_here

# Your Polygon wallet address (with 0x prefix)
POLYGON_ADDRESS=0xYourAddressHere

# Polygon chain ID (137 for mainnet, 80002 for Amoy testnet)
POLYMARKET_CHAIN_ID=137

# ============================================================================
# REDIS CACHING (Optional)
# ============================================================================

REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# ============================================================================
# SAFETY LIMITS - Risk Management
# ============================================================================

# Maximum size for a single order in USD
MAX_ORDER_SIZE_USD=1000

# Maximum position size per market in USD
MAX_POSITION_SIZE_USD=5000

# Maximum daily trading volume in USD
MAX_DAILY_VOLUME_USD=10000

# ============================================================================
# SERVER SETTINGS
# ============================================================================

SERVER_HOST=127.0.0.1
SERVER_PORT=8000
LOG_LEVEL=INFO
